---
import siteConfig from "../site.config";
import SiteIdentity from "./SiteIdentity.astro";
import Twitter from "../icons/Twitter.astro";
import Instagram from "../icons/Instagram.astro";
import LinkedIn from "../icons/LinkedIn.astro";
import GitHub from "../icons/GitHub.astro";
import Dribbble from "../icons/Dribbble.astro";
import Peerlist from "../icons/Peerlist.astro";

const currentYear = new Date().getFullYear();

// Map social link text to icon components
const socialIconMap: Record<string, any> = {
  'X/Twitter': Twitter,
  'Twitter': Twitter,
  'Instagram': Instagram,
  'LinkedIn': LinkedIn,
  'GitHub': GitHub,
  'Dribbble': Dribbble,
  'Peerlist': Peerlist,
};

// Function to get icon component for a link
const getIconForLink = (linkText: string) => {
  const normalizedText = linkText.trim();
  return socialIconMap[normalizedText] || null;
};
---

<footer class="kanit-light text-xs sm:text-sm">
  <div
    class="footer-primary flex flex-col items-center justify-center min-w-full border-t border-gray-500/50"
  >
    <div
      class="flex flex-row items-center justify-around sm:justify-center gap-2 sm:gap-6 pt-6 pb-3 sm:px-6 text-center"
    >
      {
        siteConfig.footerNavLinks?.map((link) => (
          <a href={link.href} title={link.text}>
            {link.text}
          </a>
        ))
      }
    </div>
  </div>
  <div
    class="footer-secondary flex flex-col sm:flex-row items-center justify-between gap-6 min-w-full"
  >
    <div class="flex flex-row gap-2 items-center justify-start text-balance">
      <span>&copy; {currentYear}</span>
      {siteConfig.title}. All rights reserved.
    </div>
    <div class="flex flex-row gap-4 items-center justify-end-safe">
      {
        siteConfig.socialLinks?.map((link) => {
          const Icon = getIconForLink(link.text);
          return Icon ? (
            <a 
              href={link.href} 
              title={link.text} 
              target="_blank"
              class="social-icon-link hover:scale-110 transition-transform duration-300"
              aria-label={link.text}
            >
              <Icon class="w-5 h-5 fill-current" />
            </a>
          ) : (
            <a href={link.href} title={link.text} target="_blank">
              {link.text}
            </a>
          );
        })
      }
    </div>
  </div>
  <div
    class="footer-identity h-40 sm:h-18 text-center overflow-clip sticky bottom-0 items-end"
  >
    <span
      class="sigmar-ff text-8xl sm:text-[6.5rem] leading-none text-whitesmoke/50 dark:text-gray-300/30"
      >{siteConfig.title}</span
    >
  </div>
</footer>
