---
import MainLayout from "./MainLayout.astro";

interface Props {
  pageTitle: string;
  category: "technology" | "life" | "think-out-loud";
}

const { pageTitle, category } = Astro.props;

const categoryConfig = {
  technology: {
    gradient: "from-blue-600 via-cyan-500 to-teal-400",
    icon: "ðŸ’»",
    tagline: "Code, Innovation & Digital Frontiers",
    accentColor: "#06b6d4"
  },
  life: {
    gradient: "from-pink-500 via-rose-400 to-orange-400",
    icon: "ðŸŒ±",
    tagline: "Experiences, Growth & Reflections",
    accentColor: "#f43f5e"
  },
  "think-out-loud": {
    gradient: "from-purple-600 via-violet-500 to-indigo-400",
    icon: "ðŸ’­",
    tagline: "Random Musings & Deep Thoughts",
    accentColor: "#8b5cf6"
  }
};

const config = categoryConfig[category];
---

<MainLayout pageTitle={pageTitle}>
  <div class={`category-layout category-${category}`} data-category={category}>
    <div class="category-header">
      <div class="category-badge">
        <span class="category-icon">{config.icon}</span>
        <span class="category-name">{category.replace("-", " ")}</span>
      </div>
      <p class="category-tagline kanit-light">{config.tagline}</p>
    </div>
    
    <div class="category-content">
      <slot />
    </div>
  </div>
</MainLayout>

<style define:vars={{ accentColor: config.accentColor, gradient: config.gradient }}>
  .category-layout {
    width: 100%;
    position: relative;
  }

  .category-header {
    text-align: center;
    margin-bottom: 3rem;
    padding: 2rem 0;
    position: relative;
  }

  .category-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 200%;
    height: 100%;
    background: linear-gradient(135deg, var(--gradient));
    opacity: 0.1;
    border-radius: 50%;
    filter: blur(60px);
    z-index: -1;
  }

  .category-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.5rem;
    background: rgba(255, 255, 255, 0.05);
    border: 2px solid var(--accentColor);
    border-radius: 2rem;
    font-family: 'Kanit', sans-serif;
    font-weight: 500;
    font-size: 1.125rem;
    text-transform: capitalize;
    margin-bottom: 1rem;
  }

  :global(.light) .category-badge {
    background: rgba(0, 0, 0, 0.03);
  }

  .category-icon {
    font-size: 1.5rem;
  }

  .category-name {
    color: var(--accentColor);
  }

  .category-tagline {
    font-size: 1.125rem;
    opacity: 0.7;
    max-width: 32rem;
    margin: 0 auto;
  }

  .category-content {
    position: relative;
  }

  /* Technology Theme */
  .category-technology .category-content :global(h1),
  .category-technology .category-content :global(h2),
  .category-technology .category-content :global(h3) {
    color: #06b6d4;
  }

  .category-technology .category-content :global(a) {
    color: #06b6d4;
    border-bottom: 2px solid transparent;
    transition: border-color 0.2s;
  }

  .category-technology .category-content :global(a:hover) {
    border-bottom-color: #06b6d4;
  }

  .category-technology .category-content :global(code) {
    background: rgba(6, 182, 212, 0.1);
    color: #06b6d4;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-family: 'Courier New', monospace;
  }

  .category-technology .category-content :global(blockquote) {
    border-left: 4px solid #06b6d4;
    padding-left: 1.5rem;
    font-style: italic;
    opacity: 0.9;
  }

  /* Life Theme */
  .category-life .category-content :global(h1),
  .category-life .category-content :global(h2),
  .category-life .category-content :global(h3) {
    color: #f43f5e;
  }

  .category-life .category-content :global(a) {
    color: #f43f5e;
    text-decoration: underline;
    text-decoration-color: transparent;
    transition: text-decoration-color 0.2s;
  }

  .category-life .category-content :global(a:hover) {
    text-decoration-color: #f43f5e;
  }

  .category-life .category-content :global(blockquote) {
    border-left: 4px solid #f43f5e;
    padding-left: 1.5rem;
    font-style: italic;
    background: rgba(244, 63, 94, 0.05);
    padding: 1rem 1.5rem;
    border-radius: 0.5rem;
  }

  .category-life .category-content :global(strong) {
    color: #f43f5e;
  }

  /* Think Out Loud Theme */
  .category-think-out-loud .category-content :global(h1),
  .category-think-out-loud .category-content :global(h2),
  .category-think-out-loud .category-content :global(h3) {
    color: #8b5cf6;
  }

  .category-think-out-loud .category-content :global(a) {
    color: #8b5cf6;
    position: relative;
  }

  .category-think-out-loud .category-content :global(a::after) {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: #8b5cf6;
    transition: width 0.3s;
  }

  .category-think-out-loud .category-content :global(a:hover::after) {
    width: 100%;
  }

  .category-think-out-loud .category-content :global(blockquote) {
    border-left: 4px solid #8b5cf6;
    padding-left: 1.5rem;
    font-style: italic;
    position: relative;
  }

  .category-think-out-loud .category-content :global(blockquote::before) {
    content: '"';
    position: absolute;
    left: -0.5rem;
    top: -1rem;
    font-size: 4rem;
    color: #8b5cf6;
    opacity: 0.2;
  }

  .category-think-out-loud .category-content :global(em) {
    color: #8b5cf6;
  }

  /* Shared styles */
  .category-content :global(.post-body) {
    font-family: 'Kanit', sans-serif;
    font-weight: 300;
    line-height: 1.8;
    font-size: 1.125rem;
  }

  .category-content :global(.post-body p) {
    margin-bottom: 1.5rem;
  }

  .category-content :global(.post-body h2) {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    font-family: 'Sigmar', cursive;
  }

  .category-content :global(.post-body h3) {
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    font-family: 'Sigmar', cursive;
    font-size: 1.25rem;
  }

  .category-content :global(.post-body ul),
  .category-content :global(.post-body ol) {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .category-content :global(.post-body li) {
    margin-bottom: 0.5rem;
  }

  .category-content :global(.post-body img) {
    margin: 2rem 0;
    border-radius: 1rem;
  }

  @media (max-width: 640px) {
    .category-content :global(.post-body) {
      font-size: 1rem;
    }
  }
</style>
